<%= form_tag '?', method: :get do %>
  Environment: <%= select_tag :environment_id, options_for_select(Environment.all.map { |e| [e.name, e.id] }, params[:environment_id] || @deploy_group.environment_id) %>
<% end %>

<script>
  $(function(){
    // when environment selector is changed, reload the page
    $('#environment_id').change(function(){
      $(this.form).submit();
    });
  });
</script>
