<fieldset>
  <div class="form-group">
    <%= form.label :name, "Name", class: "col-lg-2 control-label" %>
    <div class="col-lg-4">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-2">
      <div class="checkbox">
        <%= form.label :is_production do %>
          <%= form.check_box :is_production %>
          Affects Production
        <% end %>
      </div>
    </div>
  </div>

</fieldset>
