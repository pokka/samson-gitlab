<% flash_mapping.each do |type, klass| %>
  <% if messages = flash[type] %>
    <% Array.wrap(messages).each do |message| %>
      <div class="alert alert-<%= klass %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= message %>
        <% if display_access_request_link?(type) %>
          <%= link_to_request_access %>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>

