{
  "name": "Samson",
  "repository": "https://github.com/zendesk/samson",
  "logo": "https://raw.githubusercontent.com/zendesk/samson/master/public/images/favicon.ico",
  "addons": [
    "heroku-postgresql:hobby-dev",
    "memcachier:dev"
  ],
  "env": {
    "PLUGINS": {
      "description": "What plugins to use",
      "value": "all",
      "required": true
    },
    "DEFAULT_URL": {
      "description": "https://xyz.herokuapp.com",
      "required": true
    },
    "SECRET_TOKEN": {
      "generator": "secret",
      "required": true
    },
    "GITHUB_TOKEN": {
      "required": true
    },
    "GITHUB_CLIENT_ID": {
      "description": "Fill in to use github auth"
    },
    "GITHUB_SECRET": {
      "description": "Fill in to use github auth"
    },
    "GOOGLE_CLIENT_ID": {
      "description": "Fill in to use google auth"
    },
    "GOOGLE_CLIENT_SECRET": {
      "description": "Fill in to use google auth"
    },
    "BUNDLE_WITHOUT": {
      "value": "mysql2:sqlite"
    }
  },
  "scripts": {
    "postdeploy": "bundle exec rake db:schema:load"
  },
  "keywords": ["samson", "deploy", "github", "rails"]
}
